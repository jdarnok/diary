<div class="container">

  <h2>Subjects</h2>
  <% if current_user.has_role? :admin %>
  <div class="well">

    <%= link_to "New Subject", new_subject_path, remote: true, class: "btn btn-primary" %>
  </div>
  <% end %>
  <div class="new-subject"></div>

  <table id class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>ID#</th>
      <th>Name</th>
      <th>Desciption</th>
      <th>Updated at</th>
      <th>Created at</th>
      <% if current_user.has_role? :admin %>
      <th>Actions</th>
      <% end %>
    </tr>
    </thead>
    <tbody id="subjects">
    <%= render @subjects %>
    </tbody>
  </table>

</div>
